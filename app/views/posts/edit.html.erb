<h2>Edit Post</h2>

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <%= f.label :featured_image %><br>
  <%= f.text_field :featured_image %>

  <%= f.label :featured_video %><br>
  <%= f.text_field :featured_video %>

  <%= f.label :content %><br>
  <%= f.text_area :content %>

  <%= f.submit %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
